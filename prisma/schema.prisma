generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model SignosVitales {
  id         Int        @id @default(autoincrement())
  presion    Float
  horario    DateTime   @default(now())
  resultado  Resultado? // Un signo vital tiene 0 o 1 resultado
}

model Resultado {
  id             Int          @id @default(autoincrement())
  resultado      Float
  id_signo_vital Int          @unique
  signoVital     SignosVitales @relation(fields: [id_signo_vital], references: [id])
}
