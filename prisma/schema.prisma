generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model SignosVitales {
  id      Int      @id @default(autoincrement())
  frecuencia_cardiaca Float
  presion_arterial Float
  frecuencia_respiratoria Float
  temperatura_corporal Float
  saturacion_oxigeno Float
  procalcitonina Float
  lactato Float
  proteina_creactiva Float
  leucocitos Float
  patologias_presentes String
  horario DateTime @default(now())
  id_paciente Int
  paciente Paciente @relation(fields: [id_paciente], references: [id])
  resultados Resultado[]
}

model Resultado {
  id        Int     @id @default(autoincrement())
  resultado Float
  signoVital SignosVitales @relation(fields: [signoVitalId], references: [id])
  signoVitalId Int
}

model Paciente {
  id          Int            @id @default(autoincrement())
  nombre      String
  edad       Int
  sexo        String
  habitacion   String
  fecha_ingreso DateTime @default(now())
  signosVitales SignosVitales[]
}
