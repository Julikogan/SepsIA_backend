generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "windows", "darwin-arm64", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model SignosVitales {
  id                      Int         @id @default(autoincrement())
  frecuencia_cardiaca     Float
  presion_arterial        Float
  frecuencia_respiratoria Float
  temperatura_corporal    Float
  saturacion_oxigeno      Float
  procalcitonina          Float
  lactato                 Float
  proteina_creactiva      Float
  leucocitos              Float
  patologias_presentes    String
  horario                 DateTime    @default(now())
  resultados              Resultado[]
  paciente                Pacientes   @relation(fields: [pacienteId], references: [id])
  pacienteId              Int
}

model Resultado {
  id           Int           @id @default(autoincrement())
  resultado    Float
  signoVital   SignosVitales @relation(fields: [signoVitalId], references: [id])
  signoVitalId Int
}

model Pacientes {
  id               Int             @id @default(autoincrement())
  nombre           String
  sexo             String
  edad             Int
  dni              Int             @unique
  habitacion       Int
  ingreso_paciente DateTime        @default(now())
  signos           SignosVitales[]
}
